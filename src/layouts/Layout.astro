---
import Header from "../components/Header.astro";
import Footer from '../components/footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<div class="pt-16">
			<Header />
			<slot />
		</div>
		<Footer />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	@font-face {
	font-family: 'Tanker';
	src: url('/fonts/Tanker-Regular.woff') format('woff');
	font-weight: normal;
	font-style: normal;
	font-display: swap;
	}

	@font-face {
		font-family: 'Supreme';
		src: url('/fonts/Supreme-Regular.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	body {
		font-family: 'Supreme', sans-serif;
	}
</style>
